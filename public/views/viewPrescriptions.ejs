<body>
  <!-- Page Title -->
  <header class="container container1 mt-4 mb-4 text-center ">
    <h1 id="pageTitle"><b>My Medical Reports</b></h1><br>


    <% for(var i=0 ; i < records.length ; i++) {%>

      <div class="card">
        <div class="card-header">
          <b>From:</b>
          <%=records[i].date_from%>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <b>To:</b>
            <%=records[i].date_to%>
        </div>
        <div class="card-body ">
          <h5 class="card-title"><b>Dr. <%=records[i].dr_name%></b></h5>
          <h6 class="card-title1">
            <%=records[i].hospital%>
          </h6>
          <p class="card-text">
            <%=records[i].add%>
          </p>
          <h6 class="card-title1"><b>
              <%=records[i].major_disease%>
            </b></h6>
          <!-- <a href="#" class="btn btn-primary">Medical Record</a> -->
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal<%=i%>">
            Medical Record
          </button>
        </div>
      </div>
      <br>



      <link rel="stylesheet" href="css/modalReport.css">

      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


      <!-- Modal -->
      <div class="modal fade" id="exampleModal<%=i%>" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Medical Report Information</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true"><i class="fa fa-close"></i></span>
              </button>
            </div>

            <div class="modal-body">


              <div class="row g-0">

                <div class="col-md-8 border-right">

                  <div class="status p-3">

                    <table class="table table-borderless">

                      <tbody>
                        <tr>

                          <td>
                            <div class="d-flex flex-column">

                              <span class="heading d-block"><b>Hospital</b></span>
                              <span class="subheadings">
                                <%=records[i].hospital%>
                              </span>


                            </div>
                          </td>
                          <td>
                            <div class="d-flex flex-column">

                              <span class="heading d-block"><b>Time/Date</b></span>
                              <span class="subheadings">5:00PM 3-12-2020</span>


                            </div>
                          </td>
                          <td>
                            <div class="d-flex flex-column">

                              <span class="heading d-block"><b>Status</b></span>
                              <span class="subheadings"><i class="dots"></i> Booked</span>


                            </div>
                          </td>
                        </tr>
                        <tr>

                          <td>
                            <div class="d-flex flex-column">

                              <span class="heading d-block"><b>Speciality</b></span>
                              <span class="subheadings">
                                <%=records[i].special%>
                              </span>


                            </div>
                          </td>

                          <td colspan="2">

                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Reason of visiting</b></span>
                              <span class="subheadings">Due to major disease: <b>
                                  <%=records[i].major_disease%>
                                </b></span>
                            </div>
                          </td>


                          <td>


                          </td>
                        </tr>
                        <tr>


                          <td>
                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Dosage List</b></span>
                              <span class="subheadings">
                                <%=records[i].dosage[0]%>
                              </span>
                              <span class="subheadings">
                                <%=records[i].dosage[1]%>
                              </span>
                              <span class="subheadings">
                                <%=records[i].dosage[2]%>
                              </span>
                            </div>
                          </td>


                          <td>
                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Medical Tests Recommended</b></span>
                              <span class="subheadings">
                                <%=records[i].mtr[0]%>
                              </span>
                              <span class="subheadings">
                                <%=records[i].mtr[1]%>
                              </span>
                              <span class="subheadings">
                                <%=records[i].mtr[2]%>
                              </span>
                            </div>
                          </td>

                        </tr>


                        <tr>
                          <td>
                            <div class="d-flex flex-column ">
                              <span class="heading d-block cen"><b>Medical Procedure Followed</b></span>
                              <span class="subheadings cen">
                                <%=records[i].mpf%>
                              </span>
                              <!-- <span class="subheadings"><%=records[i].mpf[1]%></span>
                               <span class="subheadings"><%=records[i].mpf[2]%></span> -->

                            </div>
                          </td>

                        </tr>

                        <tr>
                          <td>
                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Direction</b></span>
                              <span class="d-block subheadings">Get direction by using</span>
                              <span class="d-flex flex-row">

                                <img src="https://img.icons8.com/color/100/000000/google-maps.png" class="rounded"
                                  width="30" />



                              </span>

                            </div>
                          </td>

                          <td colspan="2">

                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Hospital Gallery</b></span>
                              <span class="d-flex flex-row gallery">

                                <img src="https://i.imgur.com/VfRSLTm.jpg" width="50" class="rounded">
                                <img src="https://i.imgur.com/jb9Cy5h.jpg" width="50" class="rounded">
                                <img src="https://i.imgur.com/vBUz4HA.jpg" width="50" class="rounded">

                              </span>
                            </div>
                          </td>

                        </tr>
                      </tbody>
                    </table>



                  </div>




                </div>
                <div class="col-md-4">

                  <div class="p-2 text-center">

                    <div class="profile">

                      <img src="https://i.imgur.com/VfRSLTm.jpg" width="100" class="rounded-circle img-thumbnail">

                      <span class="d-block mt-3 font-weight-bold">Dr. <%=records[i].dr_name%>.</span>

                    </div>

                    <div class="about-doctor">

                      <table class="table table-borderless">

                        <tbody>


                          <tr>

                            <div class="d-flex flex-column">

                              <span class="heading d-block"><b>Language</b></span>
                              <span class="subheadings">English,Hindi</span>


                            </div>

                          </tr>


                          <tr>
                            <td>
                              <div class="d-flex flex-column">

                                <span class="heading d-block"><b>Organisation</b></span>
                                <span class="subheadings">
                                  <%=records[i].hospital%>
                                </span>


                              </div>
                            </td>

                            <td>
                              <div class="d-flex flex-column">

                                <span class="heading d-block"><b>Specialist</b></span>
                                <span class="subheadings">
                                  <%=records[i].special%>
                                </span>


                              </div>
                            </td>
                          </tr>

                          <tr>

                            <!-- <td> -->
                            <hr>
                            </hr>
                            <div class="d-flex flex-column">
                              <span class="heading d-block"><b>Contact</b></span>
                              <span class="subheadings">
                                <%=records[i].add%>
                              </span>
                            </div>
                            <!-- </td>   -->

                          </tr>


                        </tbody>
                      </table>

                    </div>

                  </div>

                </div>



              </div>



            </div>

          </div>
        </div>
      </div>


      <% } %>

  </header>


