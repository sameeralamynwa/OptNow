<link rel="stylesheet" href="/css/patientHome.css">
<h1 class="text-center">welcome <b><%= username %> </b></h1><br>
<p class="line-1 anim-typewriter"><%= quo %> </p><br>
<h3 class="text-center">your services</h3><br>
<div class="svs d-flex flex-row justify-content-center align-items-center flex-wrap">
    <div class="service d-flex flex-column ">
        <img src="/img/aptmnt.jpg" alt="alt text">
        <button type="button" data-toggle="modal" data-target="#exampleModal" id="book">
            Book an appointment/ Give Feedback
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Select doctor specialisation</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <select class="form-control" id="special">
                        <option value="" selected>Family Medicine</option>
                        <option value="">Internal Medicine</option>
                        <option value="">Pediatrician</option>
                        <option value="">Gynecologist</option>
                        <option value="">Cardiologist</option>
                        <option value="">Oncologist</option>
                        <option value="">Gastroenterologist</option>
                        <option value="">Pulmonologist</option>
                        <option value="">Infectious disease</option>
                        <option value="">Nephrologist</option>
                        <option value="">Endocrinologist</option>
                        <option value="">ENT</option>
                        <option value="">Dermatologist</option>
                        <option value="">Psychiatrist</option>
                        <option value="">Neurologist</option>
                        <option value="">Radiologist</option>
                        <option value="">Anesthesiologist</option>
                        <option value="">Surgeon</option>
                        <option value="">Physician executive</option>
                    </select>
      
                </div>
                <div class="modal-footer">
                  <button id="searchDoctor" type="button" class="btn btn-secondary">Search</button>
                </div>
              </div>
            </div>
          </div>
    </div>
    <div class="service d-flex flex-column ">
        <img src="/img/pres.webp" alt="alt text">
        <button type="button" id="pres" class="ii">
            Check your prescriptions
        </button>
    </div>
    <div class="service d-flex flex-column ">
        <img src="/img/store.jpg" alt="alt text">
        <button type="button" id="stores" class="ii">
            Check nearby stores
        </button>
    </div>
    <div class="service d-flex flex-column ">
        <img src="/img/rehos.jpg" alt="alt text">
        <button id="risk" class="ii">
            Check your risk
        </button>
    </div>
    

</div>

<script>

  let pres = document.getElementById('pres');
  pres.addEventListener('click', function(e){
    document.location.href = "/viewPrescriptions";
  });

  let stores = document.getElementById('stores');
  stores.addEventListener('click', function(e){
    document.location.href = "/viewStores";
  });

  let searchDoctor = document.getElementById('searchDoctor');
  searchDoctor.addEventListener('click', async function(e){
    e.preventDefault();
    let special = document.getElementById('special');
    let sp = special.options[special.selectedIndex].text;
    console.log(sp);
    document.location.href = `/apt/${sp}`
  })

  let risk = document.getElementById('risk');
  risk.addEventListener('click', function(e){
    document.location.href = '/checkRisk'
  });
</script>

