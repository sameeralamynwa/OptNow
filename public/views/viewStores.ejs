<h1 class="hh">Stores Near Me</h1>
<!-- <h2><%=stores[0].address%></h2> -->
<div class="card-container">

<% for(var i=0 ; i < stores.length ; i++) {%>

    
  <div class="card">
    <div class="card-count-container">
      <div class="card-count"><%=(i+1)%></div>
    </div>
    
    <div class="card-content">
      <h2><b><%=stores[i].name%></b></h2>
      <hr>
      <b> Address - </b><%=stores[i].address%>
      , <%=stores[i].state%>
      <!-- <hr>
      <b>Pincode - </b> <%=stores[i].pincode%> -->
    </div>
    
    <div class="card-footer">
        <b>Pincode - </b> <%=stores[i].pincode%>
        <b>,   Distance - </b><%=stores[i].distance%> meter
    </div>
  </div>
  
<% } %>
</div>

<style>
  @import url('https://fonts.googleapis.com/css?family=Abel');

  .card{
    font-family: Abel, Arial, Verdana, sans-serif;
    background-image: url('img/storecard.webp');
    background-repeat: no-repeat;
    background-size: 220px 230px;
    background-position: 50% -15%;
    
  }
  .hh{
    font-family: Abel, Arial, Verdana, sans-serif;
  }

  body{
    background-image: linear-gradient(90deg, #212926, #7c8789);
  }
</style>
